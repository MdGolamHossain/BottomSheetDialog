<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".Registration.ForgetPasswordActivity"
    android:background="@color/colorPrimaryVariant"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/backgroundColor"
        >


        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbarId"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:elevation="0dp"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimaryVariant">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:gravity="center_vertical"

                >

                <ImageView
                    android:id="@+id/backImg"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/baseline_keyboard_backspace_24"
                    app:tint="@color/WhiteAllTimePrimary"

                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:fontFamily="@font/semi_bold"
                    android:textColor="@color/WhiteAllTimePrimary"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginStart="@dimen/_17sdp"
                    />



            </androidx.appcompat.widget.Toolbar>


        </com.google.android.material.appbar.AppBarLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_20sdp"
            >

            <ImageView
                android:layout_width="@dimen/_170sdp"
                android:layout_height="@dimen/_150sdp"
                android:src="@drawable/forget"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/forgetPassword1"
                android:fontFamily="@font/semi_bold"
                android:textSize="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/textPrimary"
               />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/forgetPassword2"
                android:fontFamily="@font/regular"
                android:textSize="@dimen/_10sdp"
                android:gravity="center_horizontal"
                android:textColor="@color/textSecondary"

                />


            <EditText
                android:id="@+id/edEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email or Phone"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:padding="12dp"
                android:layout_marginTop="@dimen/_30sdp"
                android:drawableStart="@drawable/ed_inbox"
                android:drawablePadding="@dimen/_7sdp"
                android:drawableTint="#595959"
                android:background="@drawable/edittext_bg_selector"
                android:backgroundTint="@null"
                android:inputType="textEmailAddress"
                android:outlineProvider="background"
                android:importantForAutofill="no" />






            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/signUpBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginEnd="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_50sdp"
                android:background="@drawable/ripl_btn"
                android:elevation="@dimen/_5sdp"
                android:outlineSpotShadowColor="@color/cardBackgroundColor"
                android:textStyle="bold"
                android:shadowColor="@color/textSecondary"
                android:text="Continue"
                android:textAllCaps="false"
                android:fontFamily="@font/semi_bold"
                android:textColor="@color/backgroundColor"
                android:textSize="@dimen/_12sdp"
                android:translationZ="@dimen/_5sdp"
                />


        </LinearLayout>




    </LinearLayout>
</LinearLayout>
